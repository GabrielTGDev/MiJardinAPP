<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.mijardin.controllers.DashboardController">
    <top>
        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <Label text="Total de Plantas:"/>
            <Label fx:id="totalPlantasLabel" text="0" style="-fx-font-size: 18px;"/>
            <Label text="Plantas que necesitan riego:"/>
            <Label fx:id="plantasRiegoLabel" text="0" style="-fx-font-size: 18px;"/>
            <Label text="Plantas que necesitan fertilización:"/>
            <Label fx:id="plantasFertilizacionLabel" text="0" style="-fx-font-size: 18px;"/>
        </GridPane>
    </top>
    <center>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Alertas y Notificaciones" style="-fx-font-size: 16px;"/>
            <Label fx:id="mensajeEstadoLabel" text="¡Todo en orden, tus plantas están felices!" style="-fx-font-size: 14px; -fx-text-fill: green;"/>
            <Label text="Riegos Pendientes:"/>
            <ListView fx:id="riegosPendientesList" prefHeight="100"/>
            <Label text="Fertilizaciones Pendientes:"/>
            <ListView fx:id="fertilizacionesPendientesList" prefHeight="100"/>
        </VBox>
    </center>
    <bottom>
        <ToolBar>
            <Button text="Añadir Nueva Planta" onAction="#crearPlanta"/>
            <Button text="Ver Todas las Plantas" onAction="#verPlantas"/>
        </ToolBar>
    </bottom>
</BorderPane>