<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.mijardin.controllers.DashboardController">
    <top>
        <HBox spacing="10" style="-fx-background-color: #e6f4ef; -fx-padding: 10;">
            <HBox spacing="10">
                <Label text="ðŸŒ±" style="-fx-font-size: 24px;" />
                <Label text="Plant Manager" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            </HBox>
            <HBox spacing="20" alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                <Hyperlink text="Dashboard" />
                <Hyperlink text="Plants" />
                <Hyperlink text="Tasks" />
                <Hyperlink text="Settings" />
            </HBox>
        </HBox>
    </top>
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <Label text="Dashboard" style="-fx-font-size: 32px; -fx-font-weight: bold;" />
            <HBox spacing="20">
                <VBox spacing="10" style="-fx-background-color: #e6f4ef; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;">
                    <Label text="Plants Needing Watering Today" style="-fx-font-size: 14px;" />
                    <Label fx:id="plantsNeedingWateringLabel" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                </VBox>
                <VBox spacing="10" style="-fx-background-color: #e6f4ef; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;">
                    <Label text="Plants Needing Fertilization Today" style="-fx-font-size: 14px;" />
                    <Label fx:id="plantsNeedingFertilizationLabel" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                </VBox>
            </HBox>
            <Label text="Upcoming Watering" style="-fx-font-size: 22px; -fx-font-weight: bold;" />
            <TableView fx:id="wateringTable" style="-fx-background-color: #f8fcfa;">
                <columns>
                    <TableColumn fx:id="wateringPlantNameColumn" text="Plant Name" />
                    <TableColumn fx:id="wateringDateColumn" text="Watering Date" />
                </columns>
            </TableView>
            <Label text="Upcoming Fertilization" style="-fx-font-size: 22px; -fx-font-weight: bold;" />
            <TableView fx:id="fertilizationTable" style="-fx-background-color: #f8fcfa;">
                <columns>
                    <TableColumn fx:id="fertilizationPlantNameColumn" text="Plant Name" />
                    <TableColumn fx:id="fertilizationDateColumn" text="Fertilization Date" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>